{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
